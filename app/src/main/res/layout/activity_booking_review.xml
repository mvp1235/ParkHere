<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.sjsu.team408.parkhere.BookingReviewActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookingRatingBar"/>

        <TextView
            android:id="@+id/bookintStarCounts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical" />


    </LinearLayout>

    <EditText
        android:id="@+id/bookingReviewDescription"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:ems="10"
        android:hint="@string/reviewHint"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/bookingReviewSubmitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/submit" />

</LinearLayout>
